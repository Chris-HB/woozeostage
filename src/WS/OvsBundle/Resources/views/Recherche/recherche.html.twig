<form id="form_recherche" action="{{ path('ws_ovs_recherche_recherche') }}" method="post">
    {{ form_widget(form) }}
    <input type="submit" value="Rechercher" />
</form>
<div id="resultats_recherche"> 
    {% include 'WSOvsBundle:Recherche:rechresult.html.twig' with {'evenements': evenements, 'type': type}%}
</div>

<script>
    $(document).ready(function () {
        $("input").keyup(function () {
            $.ajax({
                type: "POST",
                url: Routing.generate('ws_ovs_recherche_recherche'),
                cache: false,
                data: {recherche: $('#ws_ovsbundle_recherche_recherche').val(), type: $('#ws_ovsbundle_recherche_type').val()},
                success: function (data) {
                    $('#resultats_recherche').html(data);
                }
            });
        });
        
        $("#ws_ovsbundle_recherche_type").change(function () {
            $.ajax({
                type: "POST",
                url: Routing.generate('ws_ovs_recherche_recherche'),
                cache: false,
                data: {recherche: $('#ws_ovsbundle_recherche_recherche').val(), type: $('#ws_ovsbundle_recherche_type').val()},
                success: function (data) {
                    $('#resultats_recherche').html(data);
                }
            });
        });

        $("#resultats_recherche").mouseover(function () {
            $("span").addClass("aspectcurseur");
        });
    });
</script>